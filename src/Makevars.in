CXX_STD = CXX11
PKG_CFLAGS=$(C_VISIBILITY)

@HIDE_IF_NO_OPENGL@ DO_BOTH=1
ifndef DO_BOTH
  MAKINGNULL=TRUE
endif

ifndef MAKINGNULL
  PKG_CPPFLAGS=@CPPFLAGS@ -Iext
  PKG_LIBS=@LIBS@
  NULLSHLIB=null$(SHLIB)
else
  PKG_CPPFLAGS=@NULL_CPPFLAGS@ -Iext
  PKG_LIBS=@NULL_LIBS@
  NULLSHLIB=
endif

all: $(SHLIB) @HIDE_IF_NO_OPENGL@ $(NULLSHLIB) 

.PHONY: .FORCE

$(NULLSHLIB): .FORCE
	-mkdir -p OGLdir
	-mv *.o OGLdir
	-mkdir -p NULLdir
	-mv NULLdir/* .
	MAKINGNULL=TRUE $(R_HOME)/bin/R CMD SHLIB -o $@ *.cpp *.c
	-mv *.o NULLdir
	-mv OGLdir/* .
	-rm -rf OGLdir
